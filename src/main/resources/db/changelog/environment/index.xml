<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- DEV environment updates -->
    <includeAll path="dev" relativeToChangelogFile="true" contextFilter="dev"/>

    <!-- TEST environment updates -->
    <includeAll path="test" relativeToChangelogFile="true" contextFilter="test"/>

    <!-- PROD environment updates -->
    <includeAll path="prod" relativeToChangelogFile="true" contextFilter="prod"/>

</databaseChangeLog>